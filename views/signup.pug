extends layout 

block content
        form(id='Fvalue' method='post' action='/signup')
            p Username:
                br
                input(name='username' type='text')
            p Email:
                br
                input(name='email' type='text')
            p Age: 
                br
                input(name='age' type='text')   
            p Password:
                br
                input(name='password' type='text')
            p What is your favorite primary color?
                select(name="colors") 
                    option(value='Red')
                    option(value='Blue')
                    option(value='Yellow')
                    option(value="I hate colors")
            p What is your favorite meal of the day?
                select(name="meal")
                    option(value='Breakfast')
                    option(value='Lunch')
                    option(value='Dinner/Supper')
                    option(value='I eat when I want to')
            p Batman or Superman?
                select(name='Batman or Superman')
                    option(value='Batman, Duh') Batman, Duh.
                    option(value='Easy, Superman') Easy, Superman.
                    option(value='Captain America') Captain America.
                    option(value='Who?') ...Who?
            p
                input(type='submit' value='Sign Up')
